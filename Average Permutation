#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int n,t;
    cin>>t;
    while(t--)
    {
        cin>>n;
        if(n<=3)
        cout<<3<<" "<<2<<" "<<1;
        else
        {
            cout<<n-1<<" "<<n-2<<" ";
            for(int i=1;i<=n-4;i++)
            {
                cout<<i<<" "<<endl;
            }
            cout<<n-3<<" "<<n<<endl;
        }
    }
}
