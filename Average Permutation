#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t,n,val;
    cin>>t;
    while(t--)
    {
        cin>>n;
        int arr[n];
        val=n;
        int l=0;
        int r=n-1;
        while(l<=r)
        {
          if(l==r)
          arr[l]=n;
          else
          {
              arr[l]=n;
              arr[r]=n-1;
              n=n-2;
          }
          l++;
          r--;
        }
    for(int j=0; j<val;j++){
	        cout<<arr[j]<<" ";
	    }
	    cout<<endl;
}
}

